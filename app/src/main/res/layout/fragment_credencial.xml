<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        tools:context=".CredencialFragment">


    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
            android:backgroundTint="@color/colorCredencial"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:cardCornerRadius="15dp" app:cardElevation="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/ic_assignment_ind_black_24dp"
                    android:layout_width="198dp"
                    android:layout_height="212dp"
                    android:id="@+id/imgFotoUser"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="92dp" app:layout_constraintHorizontal_bias="0.497"/>

            <ImageView
                    android:src="@drawable/logotecnm"
                    android:layout_width="286dp"
                    android:layout_height="98dp"
                    android:id="@+id/logotecnm"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="33dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:src="@drawable/tecnm2"
                    android:layout_width="238dp"
                    android:layout_height="297dp"
                    android:id="@+id/imglogo"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="280dp" app:layout_constraintHorizontal_bias="0.496"/>
            <TextView
                    android:layout_width="368dp"
                    android:layout_height="51dp" android:id="@+id/tvNombre"
                    android:textColorLink="@android:color/background_light" android:textAlignment="center"
                    android:text="JUAN DANIEL TORRES MORENO" android:textSize="24sp"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="42dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgFotoUser"/>
            <TextView
                    android:layout_width="376dp"
                    android:layout_height="57dp"
                    android:id="@+id/etNoControl"
                    android:textColorLink="@android:color/background_light"
                    android:textColor="@android:color/background_light" android:text="16980503"
                    android:textSize="30sp" android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.473"
                    android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/tvNombre"/>
            <TextView
                    android:layout_width="368dp"
                    android:layout_height="63dp"
                    android:id="@+id/etCarrera"
                    android:textColorLink="@android:color/background_light"
                    android:textAlignment="center" android:text="TICS"
                    android:textColor="@android:color/background_light" android:textSize="30sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/etNoControl" android:layout_marginBottom="97dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="14dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="13dp" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>